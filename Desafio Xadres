#include <stdio.h>

int main(void) {
    // Simulação do movimento da Torre utilizando laço for.
    // A torre se move cinco casas para a direita.
    const int casasTorre = 5; // Número de casas que a torre se moverá
    printf("Movimento da Torre:\n");
    for (int i = 0; i < casasTorre; i++) {
        // Em cada iteração, a torre avança uma casa para a direita.
        printf("Direita\n");
    }
    
    // Simulação do movimento do Bispo utilizando laço while.
    // O bispo se move cinco casas na diagonal para cima e à direita.
    const int casasBispo = 5; // Número de casas que o bispo se moverá
    int contadorBispo = 0;
    printf("\nMovimento do Bispo:\n");
    while (contadorBispo < casasBispo) {
        // Em cada iteração, o bispo avança uma casa na diagonal (combinação de duas direções).
        printf("Cima, Direita\n");
        contadorBispo++;
    }
    
    // Simulação do movimento da Rainha utilizando laço do-while.
    // A rainha se move oito casas para a esquerda.
    const int casasRainha = 8; // Número de casas que a rainha se moverá
    int contadorRainha = 0;
    printf("\nMovimento da Rainha:\n");
    do {
        // Em cada iteração, a rainha avança uma casa para a esquerda.
        printf("Esquerda\n");
        contadorRainha++;
    } while (contadorRainha < casasRainha);
    
    return 0;
}
